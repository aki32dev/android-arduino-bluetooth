<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_rounded_top"
    android:paddingVertical="16dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/view_8"
        android:layout_marginHorizontal="160dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/body.bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stringTitleDialog"
            android:textAlignment="center"/>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/caption.regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp"
            android:text="@string/stringItemTitle"/>

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/caption.regular"
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_background"
            android:paddingLeft="24dp"
            android:paddingRight="24dp" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/caption.regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:text="@string/stringItemCommand"/>

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/caption.regular"
            android:id="@+id/etCommand"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_background"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/body.regular"
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="32dp"
                android:background="@drawable/bg_button_red"
                android:textColor="@color/white"
                android:text="@string/stringItemDelete"/>

            <androidx.appcompat.widget.AppCompatButton
                style="@style/body.regular"
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="32dp"
                android:background="@drawable/bg_button"
                android:textColor="@color/white"
                android:text="@string/stringItemAction"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>